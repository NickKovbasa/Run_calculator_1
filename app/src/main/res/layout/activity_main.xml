<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="speed:"
            android:textSize="20sp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="4.30"
            android:textSize="80sp"
            android:layout_weight="2"
            android:id="@+id/id_text_result"
            android:paddingBottom="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="min/km"
            android:textSize="20sp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/km_seek"
            android:gravity="center"
            android:textSize="40sp"
            android:id="@+id/id_text_km" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">



        <SeekBar
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:max="100"
            android:progress="1"
            android:id="@+id/id_seekBar_km"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:textSize="40sp"
            android:id="@+id/id_text_hr"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:textSize="40sp"
            android:id="@+id/id_text_min"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="30dp">


        <SeekBar
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:max="10"
            android:progress="1"
            android:layout_gravity="center"
            android:id="@+id/id_seekBar_hr"/>
        <SeekBar
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:max="60"
            android:progress="5"
            android:layout_gravity="center"
            android:id="@+id/id_seekBar_min"/>
    </LinearLayout>






</LinearLayout>