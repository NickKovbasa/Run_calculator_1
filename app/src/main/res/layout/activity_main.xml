<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/anim_bg_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="speed:"
            android:textColor=" #ffffff"
            android:textSize="20sp"
            android:alpha="0.6"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="4.30"
            android:textSize="70sp"
            android:textColor=" #ffffff"
            android:layout_weight="2"
            android:alpha="0.6"
            android:id="@+id/id_text_result"
            android:paddingBottom="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="min/km"
            android:textSize="20sp"
            android:alpha="0.6"
            android:textColor=" #ffffff"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/km_seek"
            android:textColor=" #ffffff"
            android:gravity="center"
            android:textSize="40sp"
            android:alpha="0.6"
            android:id="@+id/id_text_km" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:layout_weight="3"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:max="100"
            android:progress="50"
           android:thumb="@drawable/bg_5"

            android:progressDrawable="@drawable/bg_4"

            android:id="@+id/id_seekBar_km"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor=" #ffffff"
            android:gravity="center"
            android:textSize="40sp"
            android:id="@+id/id_text_hr"
            android:alpha="0.6"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor=" #ffffff"
            android:gravity="center"
            android:textSize="40sp"
            android:id="@+id/id_text_min"
            android:alpha="0.6"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="30dp">


        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:max="10"
            android:layout_gravity="center"
            android:id="@+id/id_seekBar_hr"
            android:thumb="@drawable/bg_5"
            android:alpha="0.4"
            android:progressDrawable="@drawable/bg_4"/>
        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:max="60"
            android:layout_gravity="center"
            android:id="@+id/id_seekBar_min"
            android:thumb="@drawable/bg_5"
            android:alpha="0.4"
            android:progressDrawable="@drawable/bg_4"/>
    </LinearLayout>






</LinearLayout>